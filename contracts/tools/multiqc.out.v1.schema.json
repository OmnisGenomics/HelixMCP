{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "helixmcp:tool:multiqc:out:v1",
  "title": "multiqc output",
  "type": "object",
  "additionalProperties": false,
  "required": ["provenance_run_id", "log_artifact_id"],
  "properties": {
    "provenance_run_id": { "$ref": "helixmcp:common#/$defs/RunId" },
    "log_artifact_id": { "$ref": "helixmcp:common#/$defs/ArtifactId" },

    "multiqc_html_artifact_id": { "$ref": "helixmcp:common#/$defs/ArtifactId" },
    "multiqc_data_zip_artifact_id": { "$ref": "helixmcp:common#/$defs/ArtifactId" },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": ["samples", "raw_general_stats_lines"],
      "properties": {
        "samples": { "type": ["integer", "null"], "minimum": 0 },
        "raw_general_stats_lines": { "type": ["array", "null"], "items": { "type": "string" } }
      }
    },

    "slurm_job_id": { "type": "string", "minLength": 1, "maxLength": 64 },
    "slurm_script_artifact_id": { "$ref": "helixmcp:common#/$defs/ArtifactId" }
  }
}
