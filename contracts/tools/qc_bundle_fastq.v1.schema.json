{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "helixmcp:tool:qc_bundle_fastq:v1",
  "title": "qc_bundle_fastq input",
  "type": "object",
  "additionalProperties": false,
  "required": ["project_id", "reads_1_artifact_id"],
  "properties": {
    "project_id": { "$ref": "helixmcp:common#/$defs/ProjectId" },
    "reads_1_artifact_id": { "$ref": "helixmcp:common#/$defs/ArtifactId" },
    "reads_2_artifact_id": { "$ref": "helixmcp:common#/$defs/ArtifactId" },
    "backend": { "type": "string", "enum": ["docker", "slurm"] },
    "threads_fastqc": { "type": "integer", "minimum": 1, "maximum": 64, "default": 2 },
    "threads_multiqc": { "type": "integer", "minimum": 1, "maximum": 64, "default": 2 }
  }
}

