{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "helixmcp:tool:fastqc:out:v1",
  "title": "fastqc output",
  "type": "object",
  "additionalProperties": false,
  "required": ["provenance_run_id", "log_artifact_id"],
  "properties": {
    "provenance_run_id": { "$ref": "helixmcp:common#/$defs/RunId" },
    "log_artifact_id": { "$ref": "helixmcp:common#/$defs/ArtifactId" },

    "fastqc_html_artifact_id": { "$ref": "helixmcp:common#/$defs/ArtifactId" },
    "fastqc_zip_artifact_id": { "$ref": "helixmcp:common#/$defs/ArtifactId" },
    "metrics": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pass", "warn", "fail", "modules", "raw_lines"],
      "properties": {
        "pass": { "type": "integer", "minimum": 0 },
        "warn": { "type": "integer", "minimum": 0 },
        "fail": { "type": "integer", "minimum": 0 },
        "modules": {
          "type": "object",
          "additionalProperties": { "type": "string", "enum": ["PASS", "WARN", "FAIL"] }
        },
        "raw_lines": { "type": "array", "items": { "type": "string" } }
      }
    },

    "slurm_job_id": { "type": "string", "minLength": 1, "maxLength": 64 },
    "slurm_script_artifact_id": { "$ref": "helixmcp:common#/$defs/ArtifactId" }
  }
}
